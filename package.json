  "author": "Max Sveshnikov",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.26.1",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "inquirer": "^10.1.8",
    "ora": "^8.0.1",
    "prettier": "^3.2.5",
    "simple-git": "^3.23.0",
    "fs-extra": "^11.2.0",
    "istanbul": "^0.4.5",
    "jsdoc": "^4.0.2",
    "dependency-tree": "^9.0.0",
    "madge": "^6.1.0",
    "eslint": "^8.57.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "eslint-config-standard": "^17.1.0",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3"
  }
}