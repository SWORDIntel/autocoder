<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Contact Us - AutoCode Registration System</title>
        <style>
            body {
                font-family: "Courier New", monospace;
                line-height: 1.6;
                color: #ffffff;
                margin: 0;
                padding: 0;
                background: linear-gradient(135deg, #000000, #0000ff);
                display: flex;
                flex-direction: column;
                min-height: 100vh;
            }
            header {
                background-color: rgba(0, 0, 0, 0.6);
                padding: 1rem;
            }
            nav ul {
                list-style-type: none;
                padding: 0;
                display: flex;
                justify-content: center;
            }
            nav ul li {
                margin: 0 1rem;
            }
            nav ul li a {
                color: #00ffff;
                text-decoration: none;
            }
            nav ul li a.active {
                font-weight: bold;
            }
            main {
                flex: 1;
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 2rem;
            }
            .contact-container {
                background-color: rgba(0, 0, 0, 0.6);
                padding: 2rem;
                border-radius: 10px;
                box-shadow: 0 0 20px rgba(0, 255, 255, 0.2);
                width: 100%;
                max-width: 500px;
            }
            h1 {
                text-align: center;
                color: #00ffff;
            }
            form {
                display: flex;
                flex-direction: column;
            }
            label {
                color: #00ffff;
                margin-bottom: 0.5rem;
            }
            input,
            textarea {
                margin-bottom: 1rem;
                padding: 0.5rem;
                border: 1px solid #00ffff;
                background-color: rgba(255, 255, 255, 0.1);
                color: #ffffff;
                border-radius: 4px;
            }
            textarea {
                resize: vertical;
                min-height: 100px;
            }
            button {
                background-color: #00ffff;
                color: #000000;
                border: none;
                padding: 0.5rem;
                border-radius: 4px;
                cursor: pointer;
                font-weight: bold;
            }
            button:hover {
                background-color: #0000ff;
                color: #ffffff;
            }
            footer {
                background-color: rgba(0, 0, 0, 0.6);
                text-align: center;
                padding: 1rem;
                color: #00ffff;
            }
            .success-message {
                color: #00ff00;
                text-align: center;
                margin-top: 1rem;
                display: none;
            }
            .error-message {
                color: #ff0000;
                text-align: center;
                margin-top: 1rem;
                display: none;
            }
        </style>
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/register">Register</a></li>
                    <li><a href="/profile">Profile</a></li>
                    <li><a href="/contact" class="active">Contact</a></li>
                </ul>
            </nav>
        </header>

        <main>
            <div class="contact-container">
                <h1>Contact Us</h1>
                <form id="contactForm">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required />
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required />
                    <label for="subject">Subject:</label>
                    <input type="text" id="subject" name="subject" required />
                    <label for="message">Message:</label>
                    <textarea id="message" name="message" required></textarea>
                    <button type="submit">Send Message</button>
                </form>
                <div id="successMessage" class="success-message">Message sent successfully!</div>
                <div id="errorMessage" class="error-message"></div>
            </div>
        </main>

        <footer>
            <p>&copy; 2023 AutoCode Registration System. All rights reserved.</p>
        </footer>

        <script>
            document.getElementById("contactForm").addEventListener("submit", async (e) => {
                e.preventDefault();
                const formData = new FormData(e.target);
                const formProps = Object.fromEntries(formData);
                try {
                    const response = await fetch("/auth/contact", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify(formProps),
                    });
                    if (response.ok) {
                        document.getElementById("successMessage").style.display = "block";
                        document.getElementById("errorMessage").style.display = "none";
                        e.target.reset();
                    } else {
                        const errorData = await response.json();
                        document.getElementById("errorMessage").textContent =
                            errorData.error || "Failed to send message. Please try again.";
                        document.getElementById("errorMessage").style.display = "block";
                        document.getElementById("successMessage").style.display = "none";
                    }
                } catch (error) {
                    console.error("Error:", error);
                    document.getElementById("errorMessage").textContent = "An error occurred. Please try again.";
                    document.getElementById("errorMessage").style.display = "block";
                    document.getElementById("successMessage").style.display = "none";
                }
            });
        </script>
    </body>
</html>
