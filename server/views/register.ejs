<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Register - AutoCode</title>
        <style>
            body {
                font-family: "Courier New", monospace;
                line-height: 1.6;
                color: #ffffff;
                margin: 0;
                padding: 0;
                background: linear-gradient(135deg, #000000, #0000ff);
                display: flex;
                justify-content: center;
                align-items: center;
                min-height: 100vh;
            }
            .container {
                background-color: rgba(0, 0, 0, 0.6);
                padding: 2rem;
                border-radius: 10px;
                box-shadow: 0 0 20px rgba(0, 255, 255, 0.2);
                width: 100%;
                max-width: 400px;
            }
            h1 {
                text-align: center;
                color: #00ffff;
                margin-bottom: 1.5rem;
            }
            form {
                display: flex;
                flex-direction: column;
            }
            label {
                margin-top: 1rem;
                color: #00ffff;
            }
            input,
            select {
                padding: 0.5rem;
                margin-top: 0.5rem;
                background-color: rgba(255, 255, 255, 0.1);
                border: 1px solid #00ffff;
                color: #ffffff;
                border-radius: 4px;
            }
            button {
                margin-top: 1.5rem;
                padding: 0.75rem;
                background-color: #00ffff;
                color: #000000;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                font-weight: bold;
                transition: all 0.3s;
            }
            button:hover {
                background-color: #0000ff;
                color: #ffffff;
                box-shadow: 0 0 15px #00ffff;
            }
            .error-message {
                color: #ff0000;
                text-align: center;
                margin-top: 1rem;
            }
            .login-link {
                text-align: center;
                margin-top: 1rem;
            }
            .login-link a {
                color: #00ffff;
                text-decoration: none;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>Register</h1>
            <form id="registerForm">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required />

                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required />
                <button type="submit">Register</button>
            </form>
            <div id="errorMessage" class="error-message"></div>
            <div class="login-link">
                <a href="/login">Already have an account? Login here</a>
            </div>
        </div>

        <script>
            const form = document.getElementById("registerForm");
            const errorMessage = document.getElementById("errorMessage");

            form.addEventListener("submit", async (e) => {
                e.preventDefault();
                const formData = new FormData(form);
                const data = Object.fromEntries(formData.entries());

                try {
                    const response = await fetch("/auth/register", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify(data),
                    });

                    if (response.ok) {
                        window.location.href = "/profile";
                    } else {
                        const result = await response.json();
                        errorMessage.textContent = result.error || "Registration failed. Please try again.";
                    }
                } catch (error) {
                    console.error("Error:", error);
                    errorMessage.textContent = "An error occurred during registration. Please try again.";
                }
            });
        </script>
    </body>
</html>
