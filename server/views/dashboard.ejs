<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="theme-color" content="#100055" />
        <title>AutoCode Admin Dashboard</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <style>
            @media (max-width: 768px) {
                .card {
                    margin-bottom: 1rem;
                }
                .table-responsive {
                    font-size: 0.8rem;
                }
            }
        </style>
    </head>
    <body>
       

        <div class="container mt-4">
            <h1 class="mb-4">Admin Dashboard</h1>
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">User Statistics</h5>
                            <p class="card-text">Total Users: <%= stats.totalUsers %></p>
                            <p class="card-text">Free Tier: <%= stats.usersByTier.free %></p>
                            <p class="card-text">Premium Tier: <%= stats.usersByTier.premium %></p>
                            <p class="card-text">Enterprise Tier: <%= stats.usersByTier.enterprise %></p>
                            <p class="card-text">Total Daily Requests: <%= stats.totalDailyRequests %></p>
                            <p class="card-text">
                                Average Requests per User: <%= stats.averageRequestsPerUser.toFixed(2) %>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Usage Statistics</h5>
                            <canvas id="usageChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">User List</h5>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Email</th>
                                            <th>Tier</th>
                                            <th>Daily Requests</th>
                                            <th>Usage</th>
                                            <th>Remaining</th>
                                            <th>Devices</th>
                                            <th>Last Request</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% userStats.forEach(user => { %>
                                        <tr>
                                            <td><%= user.email %></td>
                                            <td><%= user.tier %></td>
                                            <td><%= user.dailyRequests %></td>
                                            <td><%= user.usagePercentage.toFixed(2) %>%</td>
                                            <td><%= user.remainingRequests %></td>
                                            <td><%= user.devices %></td>
                                            <td><%= new Date(user.lastRequestDate).toLocaleString() %></td>
                                            <td>
                                                <button
                                                    class="btn btn-sm btn-danger delete-user"
                                                    data-user-id="<%= user._id %>"
                                                >
                                                    Delete
                                                </button>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Inquiries</h5>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Message</th>
                                            <th>Created At</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% inquiries.forEach(inquiry => { %>
                                        <tr>
                                            <td><%= inquiry.name %></td>
                                            <td><%= inquiry.email %></td>
                                            <td><%= inquiry.message %></td>
                                            <td><%= new Date(inquiry.createdAt).toLocaleString() %></td>
                                            <td><%= inquiry.status %></td>
                                            <td>
                                                <select class="form-select inquiry-status" data-inquiry-id="<%= inquiry._id %>">
                                                    <option value="pending" <%= inquiry.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                                    <option value="in-progress" <%= inquiry.status === 'in-progress' ? 'selected' : '' %>>In Progress</option>
                                                    <option value="resolved" <%= inquiry.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                                                </select>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            const ctx = document.getElementById('usageChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Free', 'Premium', 'Enterprise'],
                    datasets: [{
                        label: 'Users per Tier',
                        data: [<%= stats.usersByTier.free %>, <%= stats.usersByTier.premium %>, <%= stats.usersByTier.enterprise %>],
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.6)',
                            'rgba(54, 162, 235, 0.6)',
                            'rgba(153, 102, 255, 0.6)'
                        ],
                        borderColor: [
                            'rgba(75, 192, 192, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(153, 102, 255, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            document.querySelectorAll('.delete-user').forEach(button => {
                button.addEventListener('click', async (e) => {
                    if (confirm('Are you sure you want to delete this user?')) {
                        const userId = e.target.dataset.userId;
                        try {
                            const response = await fetch(`/dashboard/user/${userId}`, {
                                method: 'DELETE',
                                headers: {
                                    'Content-Type': 'application/json'
                                }
                            });
                            if (response.ok) {
                                e.target.closest('tr').remove();
                            } else {
                                alert('Failed to delete user');
                            }
                        } catch (error) {
                            console.error('Error:', error);
                            alert('An error occurred while deleting the user');
                        }
                    }
                });
            });

            document.querySelectorAll('.inquiry-status').forEach(select => {
                select.addEventListener('change', async (e) => {
                    const inquiryId = e.target.dataset.inquiryId;
                    const newStatus = e.target.value;
                    try {
                        const response = await fetch(`/dashboard/inquiry/${inquiryId}`, {
                            method: 'PATCH',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ status: newStatus })
                        });
                        if (!response.ok) {
                            alert('Failed to update inquiry status');
                            e.target.value = e.target.dataset.originalValue;
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        alert('An error occurred while updating the inquiry status');
                        e.target.value = e.target.dataset.originalValue;
                    }
                });
            });
        </script>
    </body>
</html>